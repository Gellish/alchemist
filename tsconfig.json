{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "strictNullChecks": true,	  
	  "noImplicitReturns": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ]
}
